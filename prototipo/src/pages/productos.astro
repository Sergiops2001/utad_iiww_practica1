---
import Encabezado from "../layouts/Encabezado.astro"
import Suscripciones from "../components/suscripciones.astro"
---
<Encabezado></Encabezado>

  <main>
    <!-- Descripción del producto -->
    <section class="suscription-item">
      <h2 class="title-large" aria-label="Nombre del producto">Nombre del producto</h2>
      <p class="title-medium" aria-label="Breve descripción del producto e información importante">Breve descripción del producto e información importante.</p>

      <div class="images">
        <img src="#" alt="Imagen del producto 1" aria-label="Imagen del producto 1">
        <img src="#" alt="Imagen del producto 2" aria-label="Imagen del producto 2">
      </div>
    </section>

    <!-- Tipos de suscripción del producto -->
    <Suscripciones></Suscripciones>

  </main>

</body>

</html>
<style lang="scss">
  @use '../styles/variables' as *;
  @use '../styles/mixins' as *;
  @use '../styles/components/titles.scss' as *;
  @use '../styles/components/containers.scss' as *;

  .suscription-item{
    background: $color-transition-carrito;
    margin-inline: 20rem;
    margin-top: 2rem;
  }

  section{
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        margin-bottom: $spacing-xl;
    }
    .images{
        display: flex;
        gap: $spacing-md;
    }
    img{
        width: 300px;
        height: 200px;
        background: #ccc;
        border-radius: 6px;
    }
    .titulo{
        text-align: center;
        margin-top: 2rem;
        margin-bottom: 1rem;
    }
    .descripcion{
        text-align: center;
        margin-bottom: 2rem;
    }

</style>
