---
import Encabezado from "../layouts/Encabezado.astro"
import Suscripciones from "../components/suscripciones.astro"
import Herramientas from "../components/herramientaspaquete.astro"
---

<Encabezado />  <!-- ← AQUÍ: Auto-cerrado -->

<main>
    <section class="producto" aria-label="Presentación del paquete">
        <h2 class="title-large" aria-label="Presentación del paquete">Presentacion del paquete</h2>
        <h3 class="title-medium" aria-label="Nombre del paquete">Nombre del paquete</h3>
        <p class="title-small" aria-label="Descripcion del paquete e información importante">Descripcion del paquete e información importante</p>
        <img src="#" alt="imagen del paquete" aria-label="Imagen del paquete">
    </section>

    <!-- Herramientas en FILA -->
    <div class="contenedor-herramientas">
        <div class="producto-item"><Herramientas nombre="Editor de textos" descripcion="Breve descripcion" imagenAlt="editor" /></div>
        <div class="producto-item"><Herramientas nombre="Editor de video" descripcion="Breve descripcion" imagenAlt="video" /></div>
        <div class="producto-item"><Herramientas nombre="Editor de imagenes" descripcion="Breve descripcion" imagenAlt="imagenes" /></div>
        <div class="producto-item"><Herramientas nombre="IDE" descripcion="Breve descripcion" imagenAlt="IDE" /></div>
    </div>

    <Suscripciones />
</main>

<style lang="scss">
    @use '../styles/variables' as *;
    @use '../styles/mixins' as *;
    @use '../styles/components/containers.scss' as *;
	@use '../styles/components/titles.scss' as *;

    main {
        max-width: 1200px;
        margin: 0 auto;
        padding: $spacing-xl;
    }
	.producto {
		@include center-flex;
		flex-direction: column;
		text-align: center;
		margin-bottom: $spacing-xl;	
	}

    .contenedor-herramientas {
		@include box-shadow($level:3);
        display: grid;  // ← Mejor que flex
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: $spacing-lg;
        margin: $spacing-xl 0;
    }

</style> 